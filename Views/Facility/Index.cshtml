@model IEnumerable<OHD_SEM3.Models.Facility>
@{ Layout = "_AdminLayout"; }

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacilityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FacilityId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FacilityId" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FacilityId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
