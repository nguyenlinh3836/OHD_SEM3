@using OHD_SEM3.Models
@model List<OHD_SEM3.Models.ViewModel.AccountViewModel>
@{
    ViewData["Title"] = "AccountManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>User Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="SetRole">Set Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>